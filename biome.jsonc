{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
  "files": { "ignoreUnknown": false, "includes": ["**"], "maxSize": 3145728 }, // 3MiB
  "formatter": { "enabled": true, "indentStyle": "space", "indentWidth": 2, "lineWidth": 120, "lineEnding": "lf" },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": { "enabled": true, "rules": { "recommended": true } },
  "javascript": {
    "formatter": { "enabled": true, "quoteStyle": "double" },
    "linter": { "enabled": true },
    "assist": { "enabled": true }
  },
  "json": { "formatter": { "enabled": true }, "linter": { "enabled": true } },
  "css": { "formatter": { "enabled": true }, "linter": { "enabled": true }, "assist": { "enabled": true } },
  "html": { "formatter": { "enabled": true } }
}
